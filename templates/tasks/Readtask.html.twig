{% extends 'base.html.twig' %}

{% block title %}TasksController!{% endblock %}

{% block body %}

<nav class="navbar navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand">Gestion De Taches</a>
    <button class="btn ms-2" type="submit"><a href="/tasks/addnewtask">Add Task</a></button>
  </div>
</nav>

<div class="continer read">
  <h2>Read task</h2>
  <div class="card__arrow"><a href="/tasks/{{ task.id }}">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" height="15" width="15">
            <path fill="#fff" d="M13.4697 17.9697C13.1768 18.2626 13.1768 18.7374 13.4697 19.0303C13.7626 19.3232 14.2374 19.3232 14.5303 19.0303L20.3232 13.2374C21.0066 12.554 21.0066 11.446 20.3232 10.7626L14.5303 4.96967C14.2374 4.67678 13.7626 4.67678 13.4697 4.96967C13.1768 5.26256 13.1768 5.73744 13.4697 6.03033L18.6893 11.25H4C3.58579 11.25 3.25 11.5858 3.25 12C3.25 12.4142 3.58579 12.75 4 12.75H18.6893L13.4697 17.9697Z"></path>
        </svg></a>
  </div>
  <div class="card-header">
    <label>Titre Task :</label>
    <input type="text" id="task_form_Titre" name="task_form[Titre]" class="classTitre" value="{{task.Titre}}">
  </div>

  <div class="card-body">
    <div class="card-text">
      <label>Description Task :</label>
      <textarea id="task_form_Description" name="task_form[Description]" class="classDescription">{{task.Description}}</textarea>
    </div>

  <div class="card-title">
    <label>Date Creation task :</label>
    <input type="text" id="task_form_Titre" name="task_form[Titre]" class="classTitre" value="{{task.DateCreation|date("Y-m-d H:i:s")}}"> 
  </div>
  <div class="card-title">
    <label>Etat task :</label>
    <input type="text" id="task_form_Titre" name="task_form[Titre]" class="classTitre" value="{{task.etat}}"> 
  </div>
  </div>

  <form class="d-flex">
      <button class="btn w-75" type="submit"><a href="/tasks/edittask/{{ task.id }}">Edit task</a></button>
      <button class="btn w-75  ms-2" type="submit"><a href="/tasks/addnewtask"><a href="/tasks/deletetask/{{ task.id }}">delete task</a></a></button>
    </form>
</div>


{% endblock %}
